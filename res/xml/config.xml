<widget xmlns     = "http://www.w3.org/ns/widgets"
        id        = "com.hextris.hextris"
        version   = "2.0.0">
    <name>Hexris</name>
    <description>
      A fast paced puzzle game.
    </description>

    <author href="http://hextris.github.io" email="hextrisgame@gmail.com">
        Logan Engstrom, Garrett Finucane, Noah Moroze, and Michael Yang
    </author>

    <access origin="*"/>

    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="hextris/index.html" />

    <preference name="loglevel" value="DEBUG" />
    <preference name="splashscreen" value="@drawable/splash" />
    <preference name="fullscreen" value="true" />
    <preference name="backgroundColor" value="0xECF0F1" />
    <!--
      <preference name="loadUrlTimeoutValue" value="20000" />
      <preference name="InAppBrowserStorageEnabled" value="true" />
      <preference name="disallowOverscroll" value="true" />
    -->
    <!-- This is required for native Android hooks -->
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
</widget>
